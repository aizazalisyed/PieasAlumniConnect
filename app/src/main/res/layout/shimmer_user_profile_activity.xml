<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/profileTopView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:paddingBottom="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:background="@color/darker_gray"
                />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/alumniProfilePic"
                android:layout_width="130dp"
                android:layout_height="130dp"
               android:src="@color/darker_gray"
                app:civ_border_width="3dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                app:civ_border_color="@color/white"/>


            <TextView
                android:id="@+id/alumniProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@color/darker_gray"
                android:layout_below="@id/alumniProfilePic"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/alumniDegreeProgram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alumniProfileName"
                android:background="@color/darker_gray"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/alumniDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alumniDegreeProgram"
                android:background="@color/darker_gray"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"

                />
            <TextView
                android:id="@+id/batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alumniDepartment"
                android:background="@color/light_gray"
                android:textColor="@color/darker_gray"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personalInfoView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/profileTopView"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"
            android:backgroundTint="@color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/jobHistoryView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/personalInfoView"
            android:layout_marginTop="30dp"
            android:background="@color/darker_gray"
            />
            <RelativeLayout
                android:id="@+id/achievementView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/jobHistoryView"
                android:layout_marginTop="30dp"
                android:background="@color/darker_gray"
                />
    </RelativeLayout>

</ScrollView>