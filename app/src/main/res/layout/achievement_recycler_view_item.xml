<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gradient_mid_color"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="1dp"
        android:paddingStart="6dp"
        android:paddingBottom="20dp"
        android:paddingEnd="10dp"
        >
        <TextView
            android:id="@+id/achievementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Associate SoftWare Engineer"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>


        <kr.co.prnd.readmore.ReadMoreTextView
            android:id="@+id/achievementDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I was working as a software engineer"
            android:textColor="@color/darker_gray"
            android:textSize="14sp"
            android:layout_below="@id/achievementTitle"
            android:layout_marginTop="6dp"
            app:readMoreMaxLine="2"
            app:readMoreColor="@color/blue_100"
            app:readMoreText="...read more"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/darker_gray"
            />


    </RelativeLayout>

</RelativeLayout>