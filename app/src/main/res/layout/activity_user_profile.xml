<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/profileTopView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:paddingBottom="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/gradiant_blue"
                />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/alumniProfilePic"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/default_user"
                app:civ_border_width="3dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                app:civ_border_color="@color/white"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/addProfilePicButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_button_plus"
                android:layout_below="@id/alumniProfilePic"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/white"
                android:layout_marginTop="-30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="100dp"/>

            <TextView
                android:id="@+id/alumniProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Loading..."
                android:layout_below="@id/alumniProfilePic"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/alumniDegreeProgram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alumniProfileName"
                android:text="Loading..."
                android:textColor="@color/black"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/alumniDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alumniDegreeProgram"
                android:text="Loading..."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alumniDepartment"
                android:text="Year of Graduation :"
                android:textColor="@color/darker_gray"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/batchDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alumniDepartment"
                android:text="Loading..."
                android:textColor="@color/darker_gray"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/batch"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personalInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileTopView"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/editPersonalInformation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"/>


            <TextView
                android:id="@+id/personalInfoHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Personal Information"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"

                />
            <TextView
                android:id="@+id/emailHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/personalInfoHeading"
                android:text="Email"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darker_gray"
                android:layout_toEndOf="@id/emailHeading"
                android:layout_below="@id/personalInfoHeading"
                android:text="Loading..."
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="70dp"
                />
            <TextView
                android:id="@+id/cnicHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/emailHeading"
                android:text="Cnic"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/cnicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darker_gray"
                android:layout_toEndOf="@id/emailHeading"
                android:layout_below="@id/emailHeading"
                android:text="Loading..."
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="70dp"
                />

            <TextView
                android:id="@+id/phoneHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/cnicHeading"
                android:text="Phone"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darker_gray"
                android:layout_toEndOf="@id/emailHeading"
                android:layout_below="@id/cnicHeading"
                android:text="Loading..."
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="70dp"
                />

            <TextView
                android:id="@+id/countryHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/phoneHeading"
                android:text="Country"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/countryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/darker_gray"
                android:layout_toEndOf="@id/emailHeading"
                android:layout_below="@id/phoneHeading"
                android:text="Loading..."
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="70dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/jobHistoryView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personalInfoView"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"/>

            <ImageView
                android:id="@+id/addExperienceButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="60dp"
                android:src="@drawable/ic_baseline_add_24"
                app:tint="@color/darker_gray" />
            <TextView
                android:id="@+id/jobHistoryHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Experience"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/userJobHistoryRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/job_history_recycler_view_item"
                android:layout_below="@id/jobHistoryHeading"
                android:layout_marginTop="25dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/achievementView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobHistoryView"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"/>
            <ImageView
                android:id="@+id/addAchievementButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="60dp"
                android:src="@drawable/ic_baseline_add_24"
                app:tint="@color/darker_gray"/>
            <TextView
                android:id="@+id/achievementHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Achievements"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/userAchievementRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/achievement_recycler_view_item"
                android:layout_below="@id/achievementHeading"
                android:layout_marginTop="25dp"
                />

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>